@model MusicShareWeb.Models.BaseModel
@{
    Layout = null;
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
}

@functions {
    private string CssIfActive(string curName, string name) {
        return curName == name ? "header-navigation__btn--active" : string.Empty;
    }
}
<header id="header">
    <div class="header">
        <div class="header__logo">
            <img class="header__logo-img" src="/Content/Image/logo.png" alt="" />
        </div>
        <div class="header-navigation">
            <a class="header-navigation__btn @CssIfActive(controllerName, "Search")" href="#">Старый подбор</a><!--
            --><a class="header-navigation__btn @CssIfActive(controllerName, "Article")" href="@Url.Action("Index", "Article")">Статьи</a><!--
            --><a class="header-navigation__btn @CssIfActive(controllerName, "Designer")" href="@Url.Action("Index", "Designer")">Конструктор</a><!--
            --><a class="header-navigation__btn @CssIfActive(controllerName, "Ask")" href="@Url.Action("New", "Ask")">Задать вопрос</a>
        </div>
        <div class="header__contacts">
            <div class="header__login" data-target="#SignInUpModal" data-toggle="modal">Войти на сайт | Я @(Model.CurrentUser != null ? Model.CurrentUser.NickName : "")</div>
            <ul class="header__social">
                <li class="header__social-item">В</li>
                <li class="header__social-item">f</li>
                <li class="header__social-item">t</li>
            </ul>
        </div>
    </div>
</header>