@model MusicShareWeb.Models.Store.CategoriesModel

@{
    Layout = "../Shared/Layout.cshtml";
}
<div style="margin: 0 auto; font-size: 30px; color: white;">
    @foreach (var category in Model.Categories.Where(c => c.ParentId == null)) {
        <div style="border: 1px black solid;">
            <a href="@Url.Action("Category", "Store", new { id = @category.Id })" style="color: white;">@category.Id : @category.Name</a>
        </div>
    }
</div>