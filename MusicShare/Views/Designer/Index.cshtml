@using Newtonsoft.Json;
@model MusicShareWeb.Models.DesignerModel

@{
    Layout = "../Shared/Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        ko.applyBindings(getDesigner(   @Html.Raw(JsonConvert.SerializeObject(Model.FormParameter.Name)),
                                        @Html.Raw(JsonConvert.SerializeObject(Model.FormParameter.Forms)),
                                        @Html.Raw(JsonConvert.SerializeObject(Model.FormParameter.Colors)),
                                        @Html.Raw(JsonConvert.SerializeObject(Model.FormParameter.FormsWithColor)),
                                        @Html.Raw(JsonConvert.SerializeObject(Model.BridgeParameter.Name)),
                                        @Html.Raw(JsonConvert.SerializeObject(Model.BridgeParameter.Bridges))), document.getElementById("Designer"));
    });
</script>

<div id="Designer" class="designer">
    @Html.Partial("Navigation/ChooseInstrument")
    @Html.Partial("Navigation/SubparameterNavigation")

    @Html.Partial("Form/Overview")
    @Html.Partial("Form/SubparameterValues")
</div>